<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="driver.gosedot.activity.JenisPelangganActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO - SEDOT"
        android:id="@+id/txtJudul"
        android:textColor="@color/black2"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
        android:fontFamily="@font/contm"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtJudul"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:layout_marginBottom="40dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Non Niaga"
                android:id="@+id/txtNama1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:textSize="20sp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/rela1"
                android:layout_below="@+id/txtNama1"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:elevation="3dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/house"/>

                <Button
                    android:layout_width="130dp"
                    android:id="@+id/btnNonNiaga"
                    android:layout_height="130dp"
                    android:background="@drawable/cicle_button"
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rela1"
                android:text="Rumah tangga,Asrama, dan Rumah sakit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:textSize="18sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Niaga"
                android:id="@+id/txtNama2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:textSize="20sp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/rela2"
                android:layout_below="@+id/txtNama2"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:elevation="3dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/factory"/>

                <Button
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:background="@drawable/cicle_button"
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rela2"
                android:text="Industri , Hotel, Restoran, Perusahaan , Pasar dan Terminal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:textSize="18sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sosial"
                android:id="@+id/txtNama3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:textSize="20sp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/rela3"
                android:layout_below="@+id/txtNama3"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:elevation="3dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/school_2"/>

                <Button
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:background="@drawable/cicle_button"
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rela3"
                android:text="Rumah Sakit, Sekolah, dan Panti"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:textSize="18sp"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>

</ScrollView>