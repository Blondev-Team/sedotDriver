<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="20dp"
    tools:context="driver.gosedot.activity.BerandaActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO - SEDOT"
        android:id="@+id/txtJudul"
        android:textColor="@color/black2"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
        android:fontFamily="@font/contm"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtJudul"
        android:orientation="vertical"
        android:layout_marginBottom="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:weightSum="2"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/rela1"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="80dp"
                        android:elevation="3dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/form_icon"/>

                    <Button
                        android:layout_width="130dp"
                        android:id="@+id/btnDataPelanggan"
                        android:layout_height="130dp"
                        android:background="@drawable/cicle_button"
                        />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rela1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:text="Semua Pesanan"
                    android:textSize="20sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/rela2"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="80dp"
                        android:elevation="3dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/water_truck"/>

                    <Button
                        android:layout_width="130dp"
                        android:id="@+id/btnLayananPenyedotan"
                        android:layout_height="130dp"
                        android:background="@drawable/cicle_button"
                        />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rela2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:text="Pengangkutan"
                    android:textSize="20sp" />



            </RelativeLayout>






        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:weightSum="2"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/rela3"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="80dp"
                        android:elevation="3dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/toilet"/>

                    <Button
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:background="@drawable/cicle_button"
                        />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rela3"
                    android:text="Lokasi Tangki Septik"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/rela4"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="80dp"
                        android:elevation="3dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/search"/>

                    <Button
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:background="@drawable/cicle_button"
                        />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rela4"
                    android:text="Pesanan Saya"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"/>



            </RelativeLayout>






        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:weightSum="2"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/rela5"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="80dp"
                        android:elevation="3dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/phone"/>

                    <Button
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:background="@drawable/cicle_button"
                        />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rela5"
                    android:text="Call Center"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/rela6"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="80dp"
                        android:elevation="3dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/handshake"/>

                    <Button
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:background="@drawable/cicle_button"
                        />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rela6"
                    android:text="Mitra Swasta"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"/>



            </RelativeLayout>






        </LinearLayout>

    </LinearLayout>


</RelativeLayout>

</ScrollView>